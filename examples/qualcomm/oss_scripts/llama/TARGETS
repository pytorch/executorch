runtime.python_library(
    name = "range_setting_pt2e",
    srcs = [
        "range_setting_pt2e.py",
    ],
    deps = [
        "//caffe2:torch",
    ],
)

python_binary(
    name = "llama",
    main_function = "executorch.examples.qualcomm.oss_scripts.llama.llama.main",
    preload_deps = [
        "//executorch/extension/llm/custom_ops:model_sharding_py",
    ],
