{
    "version": 10,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 31,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "common",
            "hidden": true,
            "binaryDir": "${sourceDir}/cmake-out",
            "generator": "Unix Makefiles"
        },
        {
            "name": "macos-arm64",
            "inherits": [
                "common"
            ],
            "generator": "Xcode",
            "cacheVariables": {
                "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/third-party/ios-cmake/ios.toolchain.cmake",
                "EXECUTORCH_BUILD_PRESET_FILE": "${sourceDir}/tools/cmake/preset/macos-arm64.cmake",
                "PLATFORM": "MAC_ARM64",
                "DEPLOYMENT_TARGET": "10.15"
            },
            "condition": {
                "lhs": "${hostSystemName}",
                "type": "equals",
                "rhs": "Darwin"
            }
        },
        {
            "name": "Executorch",
            "displayName": "Executorch",
            "description": "Sets Ninja generator, build and install directory",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/out/build/${presetName}",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/out/install/${presetName}"
            }
        },
        {
          "name": "pybind",
          "displayName": "Build pybindings exported in the wheel",
          "inherits": ["common"],
          "cacheVariables": {
            "EXECUTORCH_BUILD_PRESET_FILE": "${sourceDir}/tools/cmake/preset/pybind.cmake",
            "CMAKE_OSX_DEPLOYMENT_TARGET": "10.15"
          },
          "condition": {
            "type": "inList",
            "string": "${hostSystemName}",
            "list": ["Darwin", "Linux", "Windows"]
          }
        }
    ]
}
