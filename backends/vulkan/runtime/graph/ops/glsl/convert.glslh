#ifndef CONVERT_GLSLH
#define CONVERT_GLSLH

// Scalar Conversions

#ifdef T

#if T == float16_t

#define convert_to_T(x) T(clamp(x, -65504, 65504));

#else

#define convert_to_T(x) T(x);

#endif // T == float16_t

#endif // T

#endif // CONVERT_GLSLH
