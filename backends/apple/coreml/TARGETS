    types = [
        "executorchcoreml.pyi",
    ],
    visibility = [
        "//executorch/examples/apple/coreml/...",
        "@EXECUTORCH_CLIENTS",
    ],
    deps = [
        "fbsource//third-party/nlohmann-json:nlohmann-json",
