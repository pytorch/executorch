        "runtime/util/json_util.cpp",
    ],
    headers = glob([
        "runtime/inmemoryfs/**/*.hpp",
    ]),
    base_module = "executorch.backends.apple.coreml",
    compiler_flags = [
        "-std=c++17",
    ],
    preprocessor_flags = [
        "-Iexecutorch/backends/apple/coreml/runtime/util",
